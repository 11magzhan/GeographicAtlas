<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/countriesListFragment">
    <fragment
        android:id="@+id/countriesListFragment"
        android:name="com.example.geographicatlas.ui.countriesList.CountriesListFragment"
        android:label="fragment_countries_list"
        tools:layout="@layout/fragment_countries_list" >
        <action
            android:id="@+id/openCountryDetails"
            app:destination="@id/countryDetailsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/countryDetailsFragment"
        android:name="com.example.geographicatlas.ui.countryDetail.CountryDetailsFragment"
        android:label="fragment_country_details"
        tools:layout="@layout/fragment_country_details" >
        <argument
            android:name="countryId"
            app:argType="string" />
    </fragment>
</navigation>