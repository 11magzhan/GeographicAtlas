<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.country_detail.CountryDetailsFragment"
    android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/detail_flag_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/kz" />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/detail_card"
        app:layout_constraintTop_toBottomOf="@+id/detail_card"
        >
        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/capitalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8226; Capital:"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/coordinatesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8226; Capital Coordinates:"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/populationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:text="&#8226; Population:"
            android:textSize="20sp"
            />

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/areaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:text="&#8226; Area:"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/currencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:text="&#8226; Currencies:"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/regionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:text="&#8226; Region:"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/timezonesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:text="&#8226; Timezones:"
            android:textSize="20sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>